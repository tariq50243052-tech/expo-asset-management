#[Unit]
Description=Expo Stores - Node.js Service
After=network.target

#[Service]
Type=simple
WorkingDirectory=/opt/expo-stores
ExecStart=/usr/bin/node server/server.js
Restart=always
RestartSec=5
EnvironmentFile=/etc/default/expo-stores
StandardOutput=journal
StandardError=journal
# Optionally run as a dedicated user:
# User=expo

#[Install]
WantedBy=multi-user.target

